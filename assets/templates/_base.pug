extends ../bower_components/crud-assets/templates/_index.pug

block title
  | {{appname}}{% if title %} - {{title}}{% endif %}

block navbrand
  | {{appname}}

block navbar
  include _menu.pug

block style
  // link(href="{{ url_for('static', filename='css/dropzone.min.css') }}", rel="stylesheet")
  link(href="{{ url_for('static', filename='css/index.css') }}", rel="stylesheet")
  | {% block style %}{% endblock %}

block footer
  footer
    .container
      .row
        .col-lg-12
          ul.list-inline
            li
              a(href="{ url_for('home.homepage') }") Home
            li.footer-menu-divider .
            | {% if current_user.is_authenticated %}
            li
              a(href="{ url_for('auth.logout') }") Logout
            | {% else %}
            li
              a(href="{ url_for('auth.register') }") Register
            li.footer-menu-divider .
            li
              a(href="{{ url_for('auth.login') }}") Login
            | {% endif %}
          p(class="copyright text-muted small") Copyright &copy; 2017/ All Rights Reserved


block script
  // script(src="{{ url_for('static', filename='js/dropzone.min.js') }}")
  // script(src="{{ url_for('static', filename='js/index.js') }}")
  | {% block script %}{% endblock %}
